Public Sub AusDBLesen()
               '***Beginn
On Error GoTo Fehler
               '***Ende
               
  Dim SQL As String
  Dim gCn As New ADODB.Connection
        
  gCn.Mode = adModeUnknown
  gCn.Provider = "Microsoft.Jet.OLEDB.4.0"
  
  'Isolation und Kapselung der Transaktionen zum Herabsetzen des Transaktionslevels
  gCn.IsolationLevel = adXactCursorStability
  
  gCn.CursorLocation = adUseServer
  gCn.Open GsHauptPfad & "dat\" & CStr(CInt(GsAnwenderNr)) & "\SP50000.dat"
 
  Set gRsKopf.ActiveConnection = gCn
  gRsKopf.CursorLocation = adUseServer
  gRsKopf.CursorType = adOpenKeyset
  gRsKopf.LockType = adLockPessimistic
  
  SQL = "SELECT * FROM [2800_Texte]"
  gRsKopf.Open SQL
  If gRsKopf.RecordCount > 0 Then cmd1(1).Enabled = True
  
               '***Beginn
        Exit Sub
Fehler:
        Call FehlerErkl‰rung("frmSP52810", "AusDBLesen")
               '***Ende
End Sub


Private Function getFilter() As String
        '***Beginn
On Error GoTo Fehler
        '***Ende
  'Creates the SQL statement in adodc1.recordset.filter
  'and only filters text currently. It must be modified to filter other data types.
  
  Dim tmp As String
  Dim n As Integer
  Dim operator As String
  
  For Each Col In cols
    If Trim(Col.FilterText) <> "" Then
      If InStr(1, Col.FilterText, Chr(34)) = 0 And InStr(1, Col.FilterText, Chr(39)) = 0 Then
        ' " und ' m¸ssen ausgeschlossen werden. (Um SQL-Fehler zu vermeiden.)
        n = n + 1
        If n > 1 Then
          operator = " AND "
        End If
        
        Select Case gRsKopf.Fields(Col.DataField).Type
        Case adBSTR, adChar, adVarChar, adLongVarChar, adWChar, adVarWChar, adLongVarWChar
          tmp = tmp & operator & "[" & Col.DataField & "] LIKE '" & Col.FilterText & "*'"
        Case adDate, adDBDate, adDBTime
          If InStr(1, Col.FilterText, ">=") = 1 Then
            If IsDate(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] >= " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 3)
            End If
          ElseIf InStr(1, Col.FilterText, "=>") = 1 Then
            If IsDate(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] >= " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 3)
            End If
          ElseIf InStr(1, Col.FilterText, "=<") = 1 Then
            If IsDate(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] <= " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 3)
            End If
          ElseIf InStr(1, Col.FilterText, "<=") = 1 Then
            If IsDate(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] <= " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 3)
            End If
          ElseIf InStr(1, Col.FilterText, "<>") = 1 Then
            If IsDate(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] <> " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 3)
            End If
          ElseIf InStr(1, Col.FilterText, ">") = 1 Then
            If IsDate(Mid(Col.FilterText, 2)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] > " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 2)
            End If
          ElseIf InStr(1, Col.FilterText, "<") = 1 Then
            If IsDate(Mid(Col.FilterText, 2)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] < " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 2)
            End If
          ElseIf InStr(1, Col.FilterText, "=") = 1 Then
            If IsDate(Mid(Col.FilterText, 2)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] = " & Mid(Format(Col.FilterText, "\#dd\/mm\/yyyy\#"), 2)
            End If
          Else
            If IsDate(Col.FilterText) Then
              tmp = tmp & operator & "[" & Col.DataField & "] = " & Format(Col.FilterText, "\#dd\/mm\/yyyy\#")
            End If
          End If
        
        Case Else 'Numerischen Werte
          If InStr(1, Col.FilterText, ">=") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] >= " & SQLZahl(Mid(Col.FilterText, 3))
            End If
          ElseIf InStr(1, Col.FilterText, "=>") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] >= " & SQLZahl(Mid(Col.FilterText, 3))
            End If
          ElseIf InStr(1, Col.FilterText, "=<") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] <= " & SQLZahl(Mid(Col.FilterText, 3))
            End If
          ElseIf InStr(1, Col.FilterText, "<=") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] <= " & SQLZahl(Mid(Col.FilterText, 3))
            End If
          ElseIf InStr(1, Col.FilterText, "<>") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 3)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] <> " & SQLZahl(Mid(Col.FilterText, 3))
            End If
          ElseIf InStr(1, Col.FilterText, ">") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 2)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] > " & SQLZahl(Mid(Col.FilterText, 2))
            End If
          ElseIf InStr(1, Col.FilterText, "<") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 2)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] < " & SQLZahl(Mid(Col.FilterText, 2))
            End If
          ElseIf InStr(1, Col.FilterText, "=") = 1 Then
            If IsNumeric(Mid(Col.FilterText, 2)) Then
              tmp = tmp & operator & "[" & Col.DataField & "] = " & SQLZahl(Mid(Col.FilterText, 2))
            End If
          Else
            If IsNumeric(Col.FilterText) Then
              tmp = tmp & operator & "[" & Col.DataField & "] = " & SQLZahl(Col.FilterText)
            End If
          End If
        End Select
      End If
    End If
  Next Col
  
  If Trim(tmp) <> "" Then
    getFilter = tmp
  End If
  
        '***Beginn
        Exit Function
Fehler:
        Call FehlerErkl‰rung("frmSP52712", "getFilter")
        '***Ende
End Function





Private Sub cmd1_Click(Index As Integer)
        '***Beginn
On Error GoTo Fehler
        '***Ende
  Dim i As Integer
  
  Select Case Index
  Case 0 'Neu
    If gRsKopf.RecordCount > 0 Then
      gRsKopf.MoveFirst
      For i = 1 To 32000
        gRsKopf.Find "Schl = '" & "Text" & CStr(i) & "'"
        If gRsKopf.EOF Then
          gRsKopf.AddNew
          gRsKopf!Schl = "Text" & CStr(i)
          Exit For
        End If
      Next
    Else
      gRsKopf.AddNew
      gRsKopf!Schl = "Text1"
    End If
    gRsKopf.Update
  Case 1 'Lˆschen
    If gRsKopf.RecordCount > 0 Then
      Call MsgText(1, 13, 0, 0, 0)
      If MsgBox(GsMsgText(0), vbExclamation + vbYesNo + vbDefaultButton2) = vbYes Then
        'Wollen Sie den Datensatz lˆschen?
        TDBG1(0).Delete
      End If
    End If
  Case 2 'Speichern
    If gRsKopf.RecordCount > 0 Then
      TDBG1(0).Update
    End If
  Case 6 'Schlieﬂen
    Unload Me
    Exit Sub
  End Select
  
  If gRsKopf.RecordCount = 0 Then
    cmd1(1).Enabled = False
    cmd1(0).SetFocus
  Else
    TDBG1(0).SetFocus
  End If
  cmd1(2).Enabled = False
  
        '***Beginn
        Exit Sub
Fehler:
        Call FehlerErkl‰rung("frmSP52810", "cmd1_Click")
        '***Ende
End Sub

Private Sub Form_KeyDown(KeyCode As Integer, Shift As Integer)
 '***Beginn
On Error GoTo Fehler
 '***Ende
  Dim AltDown
  Const vbAltMask = 4
  
  'Beim clicken auf das Programm-Symbol im Register Aktive Programme (SP51.ProgrammAktivieren)
  'wird SendKeys "%{F12}", True - Befehl ausgef¸hrt.
  'Aktuelle form wird zu aktiven Form in normaler Grˆﬂe.
  AltDown = (Shift And vbAltMask) > 0
  If KeyCode = vbKeyF12 Then
    If AltDown Then
      Call Main
    End If
  End If

 '***Beginn
        Exit Sub
Fehler:
        Call FehlerErkl‰rung("frmSP52820", "Form_KeyDown")
 '***Ende

End Sub

