Private Sub TDBG1_KeyDown(Index As Integer, KeyCode As Integer, Shift As Integer)
 '***Beginn
On Error GoTo Fehler
 '***Ende
  
  
  Select Case KeyCode
  Case vbKeyF1
    If Shift = 1 Then
      'Die UMSCHALT-TASTE ist gedr¸ckt.
      'Hilfetexte kˆnnen erfast oder bearbeitet werden.
      objHlp.HlpShow HlpWrite, objPRM.HlpID
    Else
      objHlp.HlpShow HlpRead, objPRM.HlpID
    End If
  Case vbKeyEscape
    If TDBG1(0).DataChanged = False Then
      Call objPRM.SprungNeu("R¸ckw‰rts", Shift, TDBG1(0).TabIndex)
    End If
  Case vbKeyReturn, vbKeyDown
    gbEterNoColChange = True
  End Select
 '***Beginn
        Exit Sub
Fehler:
        Call FehlerErkl‰rung("frmSP52810", "TDBG1_KeyDown")
 '***Ende

End Sub

